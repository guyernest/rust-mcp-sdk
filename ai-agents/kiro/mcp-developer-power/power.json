  "capabilities": {
    "steering": {
      "enabled": true,
      "path": "steering/",
      "files": {
        "always": [
          "mcp-product.md",
          "mcp-tech.md",
          "mcp-structure.md",
          "mcp-workflow.md"
        ],
        "conditional": [
          {
            "file": "mcp-tool-patterns.md",
            "pattern": "**/tools/**/*.rs",
            "description": "Tool implementation patterns"
          },
          {
            "file": "mcp-resource-patterns.md",
            "pattern": "**/resources/**/*.rs",
            "description": "Resource implementation patterns",
            "status": "planned"
          },
          {
            "file": "mcp-workflow-patterns.md",
            "pattern": "**/workflows/**/*.rs",
            "description": "Workflow orchestration patterns",
            "status": "planned"
          },
          {
            "file": "mcp-prompt-patterns.md",
            "pattern": "**/prompts/**/*.rs",
            "description": "Prompt template patterns",
            "status": "planned"
          }
        ],
        "manual": [
          {
            "file": "mcp-testing.md",
            "trigger": "#mcp-testing",
            "description": "Comprehensive testing strategies (unit, integration, property, fuzz)",
            "status": "released"
          },
          {
            "file": "mcp-observability.md",
            "trigger": "#mcp-observability",
            "description": "Logging, metrics, and monitoring for production",
            "status": "released"
          },
          {
            "file": "mcp-examples.md",
            "trigger": "#mcp-examples",
            "description": "Complete working examples",
            "status": "planned"
          },
          {
            "file": "mcp-troubleshooting.md",
            "trigger": "#mcp-troubleshooting",
            "description": "Common issues and solutions",
            "status": "planned"
          }
        ]
      }
    },
    "hooks": {
      "enabled": false,
      "path": "hooks/",
      "note": "Future enhancement - pre-save formatting, pre-commit quality gates",
      "status": "planned"
    },
    "mcpServers": {
      "enabled": false,
      "path": "mcp-servers/",
      "note": "Future enhancement - cargo-pmcp as MCP server for programmatic access",
      "status": "planned"
    }
  },

  "requirements": {
    "rust": ">=1.70.0",
    "cargo": "*",
    "cargo-pmcp": ">=0.1.0"
  },

  "installation": {
    "type": "manual",
    "steps": [
      "Clone or download the mcp-developer-power directory",
      "Copy to ~/.kiro/powers/mcp-developer or symlink for development",
      "Enable in Kiro settings under Powers",
      "Install prerequisites: Rust 1.70+, cargo-pmcp",
      "Verify by asking Kiro: 'How do I build an MCP server?'"
    ],
    "note": "Automatic installation via Kiro marketplace coming soon"
  },

  "documentation": {
    "readme": "README.md",
    "design": "docs/DESIGN.md",
    "quickstart": "docs/QUICKSTART.md",
    "testing": "docs/TESTING.md",
    "patterns": "docs/PATTERNS.md"
  },

  "content": {
    "steering_files": 7,
    "steering_lines": 10876,
    "documentation": 2,
    "examples": 0,
    "hooks": 0,
    "mcp_servers": 0
  },

  "quality": {
    "principles": "Toyota Way (Jidoka, Kaizen, Genchi Genbutsu)",
    "standards": {

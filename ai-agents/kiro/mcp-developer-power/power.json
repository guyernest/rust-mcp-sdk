{
  "name": "mcp-developer",
  "version": "1.1.0",
  "displayName": "MCP Developer Power",
  "description": "Build production-grade Model Context Protocol (MCP) servers with deep AI assistance using pmcp SDK and cargo-pmcp toolkit",
  "author": "PMCP Team",
  "homepage": "https://github.com/paiml/rust-mcp-sdk",

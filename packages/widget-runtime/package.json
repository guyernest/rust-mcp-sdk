{
  "name": "@pmcp/widget-runtime",
  "version": "1.0.0",
  "description": "MCP Widget Runtime - Universal bridge API for MCP widgets",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean --external react && tsup src/browser.ts --format esm --dts --no-splitting --outDir dist/browser",
    "build:copy": "cp dist/browser/browser.mjs ../../crates/mcp-preview/assets/widget-runtime.mjs",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "widget",
    "chatgpt",
    "openai",
    "runtime",
    "bridge"
  ],
  "author": "PMCP SDK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/guyernest/pmcp-sdk"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "eslint": "^8.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
